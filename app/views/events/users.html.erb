
<!-- General design / copy that to every page -->
<div class="container py-0" data-controller="select-user"> <%#Edited %>
  <div class="row-header">
    <div class="back-button">
      <%= link_to(event_path) do %>
      <div class="btn-back"><i class="fa-solid fa-arrow-left"></i></div>
      <% end %>
    </div>
  </div>
<!-- General design / copy that to every page -->

<!-- Body of the page / different code / Don't forget the CLOSING BODY -->
  <div class="row-body">
    <div class="body-event">
      <div class="body-title pt-0 pb-4">
        <h2 class="event-header"> All Users </h2>
      </div>

        <%= simple_form_for :user, url: event_invitations_path(@event), method: :post do |f| %>
        <div class="user-container">
          <% @users.each do |user| %>
              <div class="checkbox-selector">
                <label class="tag-item"  data-set-genre-target="button" data-action="click->select-user#toggleButton">
                  <div class="checkbox-box"><%= check_box_tag 'users[]', user.email, false %></div>
                  <%= user.email  %>
                </label>
              </div>
          <% end %>
  </div>

        <%# <%= f.submit "Invite Friends"
        <% end %>

        <div class="row-cta d-flex  py-4 px-2">
          <div class="submit-button">
            <div class="x">
              <button class="invite-friends btn-cta" name="submit" type="submit">Invite Friends</button>
            </div>
          </div>
        </div>
        <% end %>

      </div>
    </div> <!-- CLOSING BODY-->
