  <%# By default form is post, must specify get as it goes to decade and we take params %>
  <div data-controller="set-genre">
    <%= simple_form_for :genre, url: set_decade_event_path, method: :get do |f| %>
    <div class="genre-container">
      <% @genres.each do |genre| %>
          <div class="checkbox-selector">
            <label class="tag-item"  data-set-genre-target="button" data-action="click->set-genre#toggleButton">
                <div class="checkbox-box"><%= check_box_tag 'genre_ids[]', genre, false %></div>
                <%= genre %>
            </label>
          </div>
      <% end %>
    </div>
<div class="row-cta d-flex  py-4 px-2">
          <div class="submit-button">
            <div class="x">
              <button class="continue btn-cta" name="submit" type="submit">Continue</button>
            </div>
          </div>
        </div>
        <% end %>
  </div>
