<div class="container_show">
  <h2><%= @event.name %></h2>

  <div class="info-tags">
    <h3>Date:</h3><p><%= @event.date %> </p>
    <h3>Address:</h3><p><%= @event.address %> </p>
    <h3>Host:</h3><p><%= @event.user.email %> </p>
  </div>

  <h4> Add Friends </h3>

  <h4> Start movie voting </h3>
  <% @selected_movies.each do |movie| %>
  <%= link_to movie.title, event_selected_movie_path(@event, movie) %>
  <% end %>

  <div class="container">
    <%= link_to "Back to events", events_path %>
    <br>
    <%= link_to "Edit event",  edit_event_path(@event)%>
    <br>
    <%= link_to "Delete event", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    <br>
    <%= link_to "See all Users", users_event_path%>
    <br>
    <%= link_to "Start movie selection", set_genre_event_path(@event)%>
  </div>
</div>
