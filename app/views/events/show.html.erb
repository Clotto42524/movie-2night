<div class="container_show">
  <%= link_to(events_path) do %>
  <i class="btn-back"><i class="fa-solid fa-arrow-left"></i>
  <% end %>

  <div class="header-show">
    <h2><%= @event.name %></h2>
  </div>

  <div class="tags">
    <div class="info-tag">
      <h3>Date: </h3>
      <p><%= @event.date %> </p>
    </div>


    <div class="info-tag">
      <h3>Address: </h3>
      <p><%= @event.address %> </p>
    </div>

  <h3> Start movie voting </h3>

    <div class="info-tag">
      <h3>Host: </h3>
      <p><%= @event.user.email %> </p>
    </div>
  </div>

  <h4> Add Friends </h4>

  <div class="container-links">
    <%= link_to "Edit event",  edit_event_path(@event)%>
    <br>
    <%= link_to "Delete event", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
    <br>
    <%= link_to "See all Users", users_event_path%>
    <br>
    <div class="button-start">
      <div class="btn-cta"> <%= link_to "Start movie selection", set_genre_event_path(@event)%></div>
    </div>
  </div>

</div>
