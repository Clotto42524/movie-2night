  <%= link_to "Delete event", event_path(@event), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}  %>
  <br>
  <%= link_to "See all Users", users_event_path%>
  <br>
  <%= link_to "Start movie selection", set_genre_event_path(@event)%>
